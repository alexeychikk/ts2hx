  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Convert",
      "program": "${workspaceFolder}/src/cli.ts",
      "preLaunchTask": "npm: ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "args": [
        "./examples/tsconfig.json",
        "./dist/hx",
        "--includeComments",
        "--includeTodos",
        "--format",
        "0"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Evolution",
      "program": "${workspaceFolder}/src/cli.ts",
      "preLaunchTask": "npm: ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "args": [
        "../evolution/libs/core/tsconfig.lib.json",
        "../evo-haxe",
        "--clean",
        "--createBuildHxml",
        "--includeComments",
        "--includeTodos",
        "--ignoreFormatError"
      ]
    },
    {
      "name": "Run Haxe",
      "type": "haxe-eval",
      "request": "launch"
    }
  ]
}
